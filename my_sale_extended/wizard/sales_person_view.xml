<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="form_view_sales_person_wizard" model="ir.ui.view">
        <field name="name">form.view.sales.person.view</field>
        <field name="model">salesperson.wizard</field>
        <field name="arch" type="xml">
            <form string="Get Sale Orders Of">
                <sheet>
                    <group>
                        <field name="custom_salesperson_ids"/>
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                </sheet>
                <footer>
                    <button name="print_report" type="object" string="print_report" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_sales_person" model="ir.actions.act_window">
        <field name="name">Sales Person</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">salesperson.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="form_view_sales_person_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="salesperson_report_print" name="SalesPerson Report"
              parent="sale.sale_menu_root" action="action_wizard_sales_person"/>
</odoo>